<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.macro.MacroFragment"
    android:backgroundTint="@color/mediumGray">







    <com.anychart.AnyChartView
        android:id="@+id/chartMacro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/mediumGray">

    <TextView
        android:id="@+id/txtTitolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grafico_dei_macronutrienti"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/lobster_two"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:layout_anchorGravity="center_horizontal"
        android:baselineAlignBottom="false" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_macro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_24"
            android:backgroundTint="@color/purple_500"
            android:baselineAlignBottom="false"
            android:layout_gravity="right|bottom"
            app:fabSize="normal"
            app:layout_anchorGravity="right|bottom"
            app:tint="@null"
            android:contentDescription="@string/aggiungi_macronutrienti"
            app:layout_constraintTop_toBottomOf="@id/txtTitolo"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="20dp"
            android:clickable="true" />


    </com.anychart.AnyChartView>









</androidx.constraintlayout.widget.ConstraintLayout>